<UserControl x:Class="AddCardToUserForm.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddCardToUserForm"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="420" Background="White" BorderBrush="#217b9e" BorderThickness="2">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock  Text="Username" Margin="0 10 5 0" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="txtUsernameAddCard" Padding="5" FontSize="14" Margin="0 0 5 10"/>
            <TextBlock  Text="Bank Card Number" Margin="0 10 5 0" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="txtCardNumber" Padding="5" FontSize="14" Margin="0 0 5 10"/>
        </StackPanel>    
    </Grid>
</UserControl>
